{
  "name": "worker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test": "NODE_PATH=../../test-shims node --loader ../../test-shims/ts-loader.mjs --test src",
    "backfill:donations": "tsx src/finance/backfill-donations.ts"
  },
  "dependencies": {
    "@nestjs/common": "10.3.7",
    "bullmq": "4.11.4",
    "ioredis": "5.4.1",
    "mongoose": "8.3.2",
    "pino": "8.19.0",
    "@trendpot/types": "workspace:*",
    "@trendpot/utils": "workspace:*",
    "@opentelemetry/api": "1.9.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.2.5",
    "tsx": "4.7.2",
    "typescript": "5.4.5",
    "@types/node": "20.12.7"
  }
}
