{
  "name": "trendpot",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "turbo run format --parallel",
    "graphql:gen": "pnpm --filter @trendpot/types run build",
    "db:seed": "pnpm --filter api run seed"
  },
  "devDependencies": {
    "turbo": "^1.11.3"
  }
}
